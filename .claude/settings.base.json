{
  "env": {
    "RIPGREP_CONFIG_PATH": "/Users/[[YOUR_USER_NAME]]/.ripgreprc",
    "GIT_OPTIONAL_LOCKS": "0",
    "DISABLE_TELEMETRY": "1",
    "RUST_LOG": "info"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Read(/Users/[[YOUR_USER_NAME]]/.zshrc)",
      "Read(//Users/[[YOUR_USER_NAME]]/.config/nvim/**)",
      "Write(//Users/[[YOUR_USER_NAME]]/.config/nvim/**)",
      "Edit(//Users/[[YOUR_USER_NAME]]/.config/nvim/**)",
      "Bash(cargo build:*)",
      "Bash(cargo check:*)",
      "Bash(cargo clippy:*)",
      "Bash(cargo fmt:*)",
      "Bash(cargo audit:*)",
      "Bash(make test-unit)",
      "Bash(go build:*)",
      "Bash(go mod:*)",
      "Bash(go vet:*)",
      "Bash(go fmt:*)",
      "Bash(go test:*)",
      "Bash(golangci-lint:*)",
      "Bash(goimports:*)",
      "Bash(npm run:*)",
      "Bash(yarn:*)",
      "Bash(git status)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git pull:*)",
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(rg:*)",
      "Bash(fd:*)",
      "Bash(bat:*)",
      "Bash(cat:*)",
      "Bash(eza:*)",
      "Bash(ls:*)",
      "Bash(gh auth:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr checkout:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr status:*)",
      "Bash(gh issue view:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue status:*)",
      "Bash(gh repo view:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(gh run watch:*)",
      "Bash(gh workflow list:*)",
      "Bash(gh workflow view:*)",
      "Bash(gh release list:*)",
      "Bash(gh release view:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "WebSearch",
      "WebFetch",
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs",
      "ListMcpResourcesTool",
      "ReadMcpResourceTool"
    ],
    "deny": [
      "Read(.aws/**)",
      "Read(.ssh/**)",
      "Edit(.aws/**)",
      "Edit(.ssh/**)",
      "Bash(sudo:*)",
      "NotebookEdit"
    ],
    "ask": [
      "Bash(rm:*)",
      "Bash(rm -r:*)",
      "Bash(rm -rf:*)",
      "Bash(rmdir:*)"
    ]
  },
  "enabledMcpjsonServers": [
    "context7"
  ],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "read input; if echo \"$input\" | grep -q '\"command\":\"find'; then echo '{\"decision\": \"block\", \"reason\": \"Use fd instead of find! Example: fd --hidden --exclude .git --exclude node_modules --color=never --print0 <pattern>\"}'; elif echo \"$input\" | grep -q '\"command\":\"grep'; then echo '{\"decision\": \"block\", \"reason\": \"Use rg instead of grep! Example: rg --no-heading --color=never --json --trim --max-columns=120 <pattern>\"}'; fi"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/[[YOUR_USER_NAME]]/.claude/hooks/git-worktree-post-add.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "ccusage statusline --visual-burn-rate emoji"
  },
  "alwaysThinkingEnabled": true
}
